<div class="row">
  <div class="col-md-12">
    <h1>Base de Datos</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col"></th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.age %></td>
            <td><%= link_to 'Show', student, class: 'btn btn-primary' %></td>
            <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-secondary' %></td>
            <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-info' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>